#include <stdio.h>
#include <math.h>

int main();



float barisAritmatika(float a, float b, float c){
    return (a + (b-1) * c);
    
}

float jumlahBrsAritmatika(float a, float b, float c){
    return ((b * 0.5) * (2 * a + (b-1) * c));
           }



void aritmatika1(){
    float bil1, bil2, b;
    int n;
    printf("||===============================|| \n");
    printf("||        BARIS ARITMATIKA       || \n");
    printf("||===============================|| \n");
    printf("|| BIlangan Pertama : \n");
    scanf("%f", &bil1);
    printf("|| BIlangan Kedua : \n");
    scanf("%f", &bil2);
    printf("|| Masukan nilai bilangan atau suku :");
    scanf("%d", &n);
    b=bil2-bil1;
    printf("NIlai suku ke-%d adalah %.f \n", n, barisAritmatika(bil1, b, n));
    printf("||===============================|| \n");
    printf("\n");
    
    
}

void aritmatika2(){
    float bil1, bil2, b;
    int n;
    printf("||===============================|| \n");
    printf("||        BARIS ARITMATIKA       || \n");
    printf("||===============================|| \n");
    printf("|| BIlangan Pertama : \n");
    scanf("%f", &bil1);
    printf("|| BIlangan Kedua : \n");
    scanf("%f", &bil2);
    printf("|| Masukan nilai bilangan atau suku :");
    scanf("%d", &n);
    b=bil2-bil1;
    printf("Jumlah suku ke-%d adalah %.f \n", n, jumlahBrsAritmatika(bil1, b, n));
    printf("||===============================|| \n");
    printf("\n");
}

void menu(){
    int pilih;
    
    printf("1. Baris Aritmatika \n");
    printf("2. Deret Aritmatika \n");
    printf("Pilih salah satu : \n");
    scanf("%d", &pilih);
    
    switch(pilih){
        case 1:
            printf("\n");
            aritmatika1();
            break;
        case 2:
            printf("\n");
            aritmatika2();
            break;
            
            
    }
    
    
    
    
    
}
